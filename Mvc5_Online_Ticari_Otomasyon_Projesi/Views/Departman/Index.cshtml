@using Mvc5_Online_Ticari_Otomasyon_Projesi.Models.Sınıflar
@model List<Departman>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<table class="table table-bordered" style="margin-top:20px">
    <tr>
        <th>ID</th>
        <th>Departman Adı</th>
        <th>Sil</th>
        <th>Güncelle</th>
        <th>Detaylar</th>
    </tr>
    @foreach (var item in Model)
    {

        <tr>
            <td>
                @item.DepartmanID
            </td>
            <td>
                @item.DepartmanAd
            </td>
            <td><a href="/Departman/DepartmanSil/@item.DepartmanID" class="btn btn-danger">Sil</a></td>
            <td><a href="/Departman/DepartmanGetir/@item.DepartmanID" class="btn btn-warning" style="color:whitesmoke">Güncelle</a></td>
            <td><a href="/Departman/DepartmanDetay/@item.DepartmanID" style="background-color:tomato;color:#ffff" class="btn btn-default">Detaylar</a></td>
        </tr>
    }
</table>
<a href="/Departman/DepartmanEkle" class="btn btn-info">Departman Ekle</a>
